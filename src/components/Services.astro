---
import { getI18n } from "../utils/i18n";
const i18n = getI18n();
const t = i18n.t.bind(i18n);
import trainingLogo from '../assets/2. LDP Training.png';
import digitalLogo from '../assets/4. LDP Digital.png';
import toolsLogo from '../assets/5. LDP TOOLS.png';
import travelLogo from '../assets/6. LDP Travel.png';
import publisherLogo from '../assets/7. LDP Publisher.png';
import foundationLogo from '../assets/8. LDP Foundation.png';
import propertyLogo from '../assets/9. LDP Property.png';

const services = [
	{
		titleKey: 'services.training.title',
		descriptionKey: 'services.training.description',
		logo: trainingLogo.src,
		color: '#2563eb'
	},
	{
		titleKey: 'services.digital.title',
		descriptionKey: 'services.digital.description',
		logo: digitalLogo.src,
		color: '#1e40af'
	},
	{
		titleKey: 'services.tools.title',
		descriptionKey: 'services.tools.description',
		logo: toolsLogo.src,
		color: '#f59e0b'
	},
	{
		titleKey: 'services.travel.title',
		descriptionKey: 'services.travel.description',
		logo: travelLogo.src,
		color: '#ef4444'
	},
	{
		titleKey: 'services.publisher.title',
		descriptionKey: 'services.publisher.description',
		logo: publisherLogo.src,
		color: '#dc2626'
	},
	{
		titleKey: 'services.foundation.title',
		descriptionKey: 'services.foundation.description',
		logo: foundationLogo.src,
		color: '#10b981'
	},
	{
		titleKey: 'services.property.title',
		descriptionKey: 'services.property.description',
		logo: propertyLogo.src,
		color: '#8b5cf6'
	}
];
---

<section id="services" class="services section">
	<div class="container">
		<div class="section-header">
			<h2 class="section-title">{t("services.title")}</h2>
			<p class="section-subtitle">
				{t("services.subtitle")}
			</p>
		</div>

		<div class="services-grid">
			{services.map((service) => (
				<div class="service-card">
					<div class="service-icon" style={`background: linear-gradient(135deg, ${service.color}15 0%, ${service.color}05 100%);`}>
						<img src={service.logo} alt={t(service.titleKey)} />
					</div>
					<h3 class="service-title">{t(service.titleKey)}</h3>
					<p class="service-description">{t(service.descriptionKey)}</p>
					<div class="service-arrow" style={`color: ${service.color};`}>
						â†’
					</div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.services {
		background: var(--color-bg-light);
	}

	.section-header {
		text-align: center;
		margin-bottom: calc(var(--spacing-unit) * 8);
	}

	.section-title {
		font-size: 3rem;
		margin-bottom: calc(var(--spacing-unit) * 2);
		position: relative;
		display: inline-block;
	}

	.section-title::after {
		content: '';
		position: absolute;
		bottom: -12px;
		left: 50%;
		transform: translateX(-50%);
		width: 80px;
		height: 4px;
		background: linear-gradient(90deg, var(--color-primary), var(--color-accent));
		border-radius: 2px;
	}

	.section-subtitle {
		font-size: 1.25rem;
		color: var(--color-text-light);
		margin-top: calc(var(--spacing-unit) * 3);
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
		gap: calc(var(--spacing-unit) * 4);
	}

	.service-card {
		background: white;
		padding: calc(var(--spacing-unit) * 4);
		border-radius: 16px;
		transition: var(--transition);
		border: 1px solid var(--color-border);
		position: relative;
		overflow: hidden;
		cursor: pointer;
	}

	.service-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 4px;
		background: linear-gradient(90deg, var(--color-primary), var(--color-accent));
		transform: scaleX(0);
		transform-origin: left;
		transition: transform 0.3s ease;
	}

	.service-card:hover::before {
		transform: scaleX(1);
	}

	.service-card:hover {
		transform: translateY(-8px);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
		border-color: var(--color-primary);
	}

	.service-icon {
		width: 80px;
		height: 80px;
		border-radius: 16px;
		display: flex;
		align-items: center;
		justify-content: center;
		margin-bottom: calc(var(--spacing-unit) * 3);
		transition: var(--transition);
	}

	.service-card:hover .service-icon {
		transform: scale(1.1) rotate(5deg);
	}

	.service-icon img {
		max-width: 70%;
		max-height: 70%;
		object-fit: contain;
	}

	.icon-emoji {
		font-size: 2.5rem;
	}

	.service-title {
		font-size: 1.5rem;
		margin-bottom: calc(var(--spacing-unit) * 2);
		color: var(--color-text);
	}

	.service-description {
		color: var(--color-text-light);
		line-height: 1.7;
		margin-bottom: calc(var(--spacing-unit) * 3);
	}

	.service-arrow {
		font-size: 2rem;
		font-weight: bold;
		opacity: 0;
		transform: translateX(-10px);
		transition: var(--transition);
	}

	.service-card:hover .service-arrow {
		opacity: 1;
		transform: translateX(0);
	}

	@media (max-width: 768px) {
		.services-grid {
			grid-template-columns: 1fr;
		}

		.section-title {
			font-size: 2rem;
		}

		.section-subtitle {
			font-size: 1.1rem;
		}
	}
</style>
