---
import logo from '../assets/1. LDP GROUP.png';
import { getLanguageFromURL, createTranslator } from "../utils/i18n";

const currentLang = getLanguageFromURL(Astro.url.pathname);
const t = createTranslator(currentLang);
---

<footer class="footer">
	<div class="container">
		<div class="footer-content">
			<div class="footer-brand">
				<img src={logo.src} alt="LDP Group" class="footer-logo" />
				<p class="footer-tagline">
					{t("footer.tagline")}
				</p>
			</div>

			<div class="footer-links">
				<div class="footer-column">
					<h4>{t("footer.services")}</h4>
					<ul>
						<li><a href="#services">{t("services.training.title")}</a></li>
						<li><a href="#services">{t("services.digital.title")}</a></li>
						<li><a href="#services">{t("services.tools.title")}</a></li>
						<li><a href="#services">{t("services.travel.title")}</a></li>
					</ul>
				</div>

				<div class="footer-column">
					<h4>{t("footer.company")}</h4>
					<ul>
						<li><a href="#about">{t("footer.aboutUs")}</a></li>
						<li><a href="#services">{t("footer.ourServices")}</a></li>
						<li><a href="#contact">{t("nav.contact")}</a></li>
					</ul>
				</div>

				<div class="footer-column">
					<h4>{t("footer.connect")}</h4>
					<ul>
						<li><a href="mailto:ptlenteradutapersada@gmail.com">ptlenteradutapersada@gmail.com</a></li>
						<li><a href="https://wa.me/6281223598599">+62 812 2359 8599</a></li>
						<li>Bandung Barat, Indonesia</li>
					</ul>
				</div>
			</div>
		</div>

		<div class="footer-bottom">
			<p>&copy; {new Date().getFullYear()} LDP Group - PT. Lentera Duta Persada. {t("footer.rights")}.</p>
			<div class="footer-bottom-links">
				<a href="#">{t("footer.privacy")}</a>
				<span>â€¢</span>
				<a href="#">{t("footer.terms")}</a>
			</div>
		</div>
	</div>
</footer>

<style>
	.footer {
		background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
		color: white;
		padding: calc(var(--spacing-unit) * 8) 0 calc(var(--spacing-unit) * 4) 0;
	}

	.footer-content {
		display: grid;
		grid-template-columns: 1.5fr 2fr;
		gap: calc(var(--spacing-unit) * 8);
		margin-bottom: calc(var(--spacing-unit) * 6);
	}

	.footer-brand {
		max-width: 400px;
	}

	.footer-logo {
		height: 60px;
		width: auto;
		margin-bottom: calc(var(--spacing-unit) * 3);
		filter: brightness(0) invert(1);
	}

	.footer-tagline {
		color: rgba(255, 255, 255, 0.7);
		line-height: 1.7;
		font-size: 0.95rem;
	}

	.footer-links {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: calc(var(--spacing-unit) * 4);
	}

	.footer-column h4 {
		font-size: 1.1rem;
		margin-bottom: calc(var(--spacing-unit) * 2);
		color: white;
		font-weight: 600;
	}

	.footer-column ul {
		list-style: none;
		display: flex;
		flex-direction: column;
		gap: calc(var(--spacing-unit) * 1.5);
	}

	.footer-column a,
	.footer-column li {
		color: rgba(255, 255, 255, 0.7);
		transition: var(--transition);
		font-size: 0.95rem;
	}

	.footer-column a:hover {
		color: white;
		padding-left: 8px;
	}

	.footer-bottom {
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		padding-top: calc(var(--spacing-unit) * 4);
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: calc(var(--spacing-unit) * 2);
	}

	.footer-bottom p {
		color: rgba(255, 255, 255, 0.6);
		font-size: 0.9rem;
		margin: 0;
	}

	.footer-bottom-links {
		display: flex;
		gap: calc(var(--spacing-unit) * 2);
		align-items: center;
	}

	.footer-bottom-links a {
		color: rgba(255, 255, 255, 0.6);
		font-size: 0.9rem;
		transition: var(--transition);
	}

	.footer-bottom-links a:hover {
		color: white;
	}

	.footer-bottom-links span {
		color: rgba(255, 255, 255, 0.3);
	}

	@media (max-width: 968px) {
		.footer-content {
			grid-template-columns: 1fr;
			gap: calc(var(--spacing-unit) * 4);
		}

		.footer-links {
			grid-template-columns: 1fr;
			gap: calc(var(--spacing-unit) * 3);
		}

		.footer-bottom {
			flex-direction: column;
			text-align: center;
		}
	}
</style>
